{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"],
      "@utils/*": ["./utils/*"],
      "@models/*": ["./models/*"],
      "@services/*": ["./services/*"],
      "@layout/*": ["./layout/*"],
      "@store/*": ["./store/*"],
      "@slices/*": ["./slices/*"],
      "@hooks/*": ["./hooks/*"],
      "@components/*": ["./components/*"],
      "@signalR/*": ["./signalR/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
